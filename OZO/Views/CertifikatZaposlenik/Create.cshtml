@model OZO.Models.CertifikatZaposlenik

@{
    ViewData["Title"] = "Create";
}

    <h1>Nova veza Z / C</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdCertifikat" class="control-label">ID - Certifikata</label>
                <select asp-for="IdCertifikat" class ="form-control" asp-items="ViewBag.IdCertifikat"></select>
            </div>
            <div class="form-group">
                <label asp-for="IdZaposlenik" class="control-label">ID - Zaposlenika</label>
                <select asp-for="IdZaposlenik" class ="form-control" asp-items="ViewBag.IdZaposlenik"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Spremi" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Natrag</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
