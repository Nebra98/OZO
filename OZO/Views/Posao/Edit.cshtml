@model OZO.Models.Posao

@{
    ViewData["Title"] = "Edit";
}

<h1>Uredi</h1>

<h4>Posao</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Naziv" class="control-label"></label>
                <input asp-for="Naziv" class="form-control" />
                <span asp-validation-for="Naziv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Opis" class="control-label"></label>
                <input asp-for="Opis" class="form-control" />
                <span asp-validation-for="Opis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cijena" class="control-label"></label>
                <input asp-for="Cijena" class="form-control" />
                <span asp-validation-for="Cijena" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Klijent" class="control-label"></label>
                <input asp-for="Klijent" class="form-control" />
                <span asp-validation-for="Klijent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lokacija" class="control-label"></label>
                <input asp-for="Lokacija" class="form-control" />
                <span asp-validation-for="Lokacija" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Kontakt" class="control-label"></label>
                <input asp-for="Kontakt" class="form-control" />
                <span asp-validation-for="Kontakt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdUsluga" class="control-label">ID - Usluge</label>
                <select asp-for="IdUsluga" class="form-control" asp-items="ViewBag.IdUsluga">
                    <option selected value="">
                        -- Odaberi --
                    </option>
                </select>
                <span asp-validation-for="IdUsluga" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdNatjecaj" class="control-label">ID - Natječaja</label>
                <select asp-for="IdNatjecaj" class="form-control" asp-items="ViewBag.IdNatjecaj">
                    <option selected value="">
                        -- Odaberi --
                    </option>
                </select>
                <span asp-validation-for="IdNatjecaj" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Ažuriraj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Natrag</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
