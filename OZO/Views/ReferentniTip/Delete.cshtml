@model OZO.Models.ReferentniTip

@{ ViewData["Title"] = "Delete"; }

<h1>Izbriši</h1>

<h5>Jeste li sigurni da želiti izbrisati ref. tip "@Html.DisplayFor(model => model.Naziv)"?</h5>
<div>
    <p>Informacije o referentom tipu</p>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Naziv)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Naziv)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Izbriši" class="btn btn-danger" /> |
        <a asp-action="Index">Natrag</a>
    </form>
</div>
