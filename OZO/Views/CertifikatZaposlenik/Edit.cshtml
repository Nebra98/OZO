@model OZO.Models.CertifikatZaposlenik

@{
    ViewData["Title"] = "Edit";
}

<h1>Uredi</h1>

<h4>Zaposlenik - Certifikat</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="IdCertifikat" class="control-label">ID - Certifikata</label>
                <select asp-for="IdCertifikat" class="form-control" asp-items="ViewBag.IdCertifikat"></select>
                <span asp-validation-for="IdCertifikat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdZaposlenik" class="control-label">ID - Zaposlenika</label>
                <select asp-for="IdZaposlenik" class="form-control" asp-items="ViewBag.IdZaposlenik"></select>
                <span asp-validation-for="IdZaposlenik" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Ažuriraj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Natrag</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
